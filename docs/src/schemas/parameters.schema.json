{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vib3.dev/schemas/parameters.json",
  "title": "VIB3+ Parameter Schema",
  "description": "Complete parameter schema for VIB3+ 4D visualization engine with 6-plane rotation support",
  "type": "object",
  "properties": {
    "system": {
      "type": "string",
      "enum": ["quantum", "faceted", "holographic"],
      "description": "Active visualization system",
      "default": "quantum"
    },
    "variation": {
      "type": "integer",
      "minimum": 0,
      "maximum": 99,
      "description": "Variation slot (0-29 default, 30-99 custom)",
      "default": 0
    },
    "geometry": {
      "type": "integer",
      "minimum": 0,
      "maximum": 23,
      "description": "Geometry index: 0-7 base, 8-15 hypersphere core, 16-23 hypertetrahedron core",
      "default": 0
    },
    "rotation": {
      "type": "object",
      "description": "6D rotation angles in radians",
      "properties": {
        "XY": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "X-Y plane rotation (3D space)",
          "default": 0
        },
        "XZ": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "X-Z plane rotation (3D space)",
          "default": 0
        },
        "YZ": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "Y-Z plane rotation (3D space)",
          "default": 0
        },
        "XW": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "X-W plane rotation (4D hyperspace - inside-out effect)",
          "default": 0
        },
        "YW": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "Y-W plane rotation (4D hyperspace)",
          "default": 0
        },
        "ZW": {
          "type": "number",
          "minimum": -6.283185307,
          "maximum": 6.283185307,
          "description": "Z-W plane rotation (4D hyperspace)",
          "default": 0
        }
      },
      "additionalProperties": false
    },
    "visual": {
      "type": "object",
      "description": "Visual rendering parameters",
      "properties": {
        "dimension": {
          "type": "number",
          "minimum": 3.0,
          "maximum": 4.5,
          "description": "Dimensional interpolation level",
          "default": 3.5
        },
        "gridDensity": {
          "type": "number",
          "minimum": 4,
          "maximum": 100,
          "description": "Geometric detail/grid density",
          "default": 15
        },
        "morphFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "description": "Shape transformation factor",
          "default": 1.0
        },
        "chaos": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Randomization/turbulence level",
          "default": 0.2
        },
        "speed": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 3,
          "description": "Animation speed multiplier",
          "default": 1.0
        },
        "hue": {
          "type": "integer",
          "minimum": 0,
          "maximum": 360,
          "description": "Base color hue in degrees",
          "default": 200
        },
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Visual brightness/intensity",
          "default": 0.5
        },
        "saturation": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Color saturation",
          "default": 0.8
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
