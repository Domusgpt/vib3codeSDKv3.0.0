<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting up.
         This theme determines the color of the background surface until Flutter
         renders its first frame. After that, this theme is no longer visible. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Theme applied to the Android Window as soon as Flutter has drawn its
         first frame. This theme determines the Window background behind the
         Flutter UI. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
